{
    "name": "edouardcourty/retryable-command",
    "description": "Retry commands if they fail, based on Symfony Commands",
    "type": "library",
    "require": {
        "php": ">=7.4",
        "symfony/console": ">=5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.4",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.37"
    },
    "license": "ISC",
    "autoload": {
        "psr-4": {
            "RetryableCommand\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Edouard Courty",
            "email": "edouard.courty2@gmail.com",
            "homepage": "https://github.com/EdouardCourty",
            "role": "Owner"
        }
    ]
}
